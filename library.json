{
    "name": "QDEC",
    "description": "High-efficiency, state-machine based quadrature decoder.  Counts quadrature pulses from rotary and linear position encoders, and supports generation of events for full-step or half-step modes.  State-machine design results in built-in resistance to bouncing.  MIT License.",
    "keywords": "quadrature,qdec,quadrature encoder,encoder,signal,pulse,state machine",
    "authors": [
        {
            "name": "Henry Gabryjelski",
            "url": "https://github.com/henrygab",
            "maintainer": true
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/SimpleHacks/QDEC.git"
    },
    "version": "1.0.1",
    "license": "MIT",
    "homepage": "http://github.com/SimpleHacks/QDEC/",
    "frameworks": "arduino",
    "platforms": "*",
    "export": {
        "exclude": [
            "docs",
            "extras"
        ]
    },
    "build": {
        "srcFilter": [
            "+<*.c>",
            "+<*.cpp>",
            "+<*.h>"
        ],
        "libArchive": false
    }
}
